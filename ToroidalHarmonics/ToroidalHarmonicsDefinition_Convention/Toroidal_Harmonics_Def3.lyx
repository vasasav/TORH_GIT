\begin_inset Formula 
\begin{equation}
\left(\vec{L}f\right)_{norm}^{\alpha}=\left(\vec{L}f\right)^{\alpha}\sqrt{g_{\alpha\alpha}}=-i\,\sqrt{\frac{g_{\alpha\alpha}}{g}}\epsilon^{\alpha\beta\gamma}\,r_{\beta}\partial_{\gamma}f\label{eq:NormAngMom}
\end{equation}

\end_inset


\end_layout

